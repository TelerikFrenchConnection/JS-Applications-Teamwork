<div class="col-md-4 col-sm-4 col-xs-6 library-item">
    <div class="library-header">
        <h6>{{this.attributes.title}}</h6>
        <h7>{{this.attributes.author}}</h7>
    </div>
    <img src="{{this.attributes.pictureURL}}" class="img-responsive center-block" alt="{this.attributes.title}} cover" data-id="{{this.id}}">
    <div><strong>Price:</strong> {{#if this.attributes.price}}{{this.attributes.price}} Euro{{else}}Free{{/if}}</div>
</div>
